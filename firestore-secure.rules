rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ğŸ” REGRAS DE SEGURANÃ‡A MULTIUSUÃRIO POR RESTAURANTE
    
    // âŒ REGRA PADRÃƒO: NEGAR TUDO por seguranÃ§a
    match /{document=**} {
      allow read, write: if false;
    }
    
    // ğŸ¢ Restaurantes - APENAS o proprietÃ¡rio pode gerenciar
    match /restaurants/{restaurantId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.ownerId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerId;
    }
    
    // ğŸ‘¤ UsuÃ¡rios - APENAS o prÃ³prio usuÃ¡rio ou admin do restaurante pode acessar
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Admin do restaurante pode ler dados de usuÃ¡rios do mesmo restaurante
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.restaurantId == resource.data.restaurantId &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'manager'];
    }
    
    // FunÃ§Ã£o helper para verificar se usuÃ¡rio pertence ao restaurante
    function belongsToRestaurant(restaurantId) {
      return request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.restaurantId == restaurantId;
    }
    
    // ğŸ¥• Insumos - APENAS usuÃ¡rios do mesmo restaurante
    match /insumos/{insumoId} {
      allow read: if belongsToRestaurant(resource.data.restaurantId);
      allow write: if belongsToRestaurant(resource.data.restaurantId);
      allow create: if request.auth != null && 
        belongsToRestaurant(request.resource.data.restaurantId);
    }
    
    // ğŸ“ Fichas TÃ©cnicas - APENAS usuÃ¡rios do mesmo restaurante  
    match /fichasTecnicas/{fichaId} {
      allow read: if belongsToRestaurant(resource.data.restaurantId);
      allow write: if belongsToRestaurant(resource.data.restaurantId);
      allow create: if request.auth != null && 
        belongsToRestaurant(request.resource.data.restaurantId);
    }
    
    // ğŸ½ï¸ Pratos - APENAS usuÃ¡rios do mesmo restaurante
    match /pratos/{pratoId} {
      allow read: if belongsToRestaurant(resource.data.restaurantId);
      allow write: if belongsToRestaurant(resource.data.restaurantId);
      allow create: if request.auth != null && 
        belongsToRestaurant(request.resource.data.restaurantId);
    }
    
    // ğŸ›’ Compras - APENAS usuÃ¡rios do mesmo restaurante
    match /compras/{compraId} {
      allow read: if belongsToRestaurant(resource.data.restaurantId);
      allow write: if belongsToRestaurant(resource.data.restaurantId);
      allow create: if request.auth != null && 
        belongsToRestaurant(request.resource.data.restaurantId);
    }
    
    // âš™ï¸ ConfiguraÃ§Ãµes - APENAS usuÃ¡rios do mesmo restaurante
    match /configuracoes/{configId} {
      allow read: if belongsToRestaurant(resource.data.restaurantId);
      allow write: if belongsToRestaurant(resource.data.restaurantId);
      allow create: if request.auth != null && 
        belongsToRestaurant(request.resource.data.restaurantId);
    }
    
    // ğŸ·ï¸ Fornecedores - APENAS usuÃ¡rios do mesmo restaurante
    match /fornecedores/{fornecedorId} {
      allow read: if belongsToRestaurant(resource.data.restaurantId);
      allow write: if belongsToRestaurant(resource.data.restaurantId);
      allow create: if request.auth != null && 
        belongsToRestaurant(request.resource.data.restaurantId);
    }
  }
}
